{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Sales of Avocado's by Bag Size per Year for the top 10 largest avocado sellers",
  "data": {
    "url": "https://raw.githubusercontent.com/tngu0105/3179/main/AVocadoREAL2%20(BUBBLE).csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "2015",
          "2016",
          "2017",
          "2018"
        ],
        "labels": [
          "Show All",
          "2015",
          "2016",
          "2017",
          "2018"
        ],
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Year_selection == null || datum.year == Year_selection"
    }
    
  ],
  "encoding": {
    "x": {
        "field": "Small Bags",
        "type": "quantitative",
        "axis": {"tickCount": 7},
        "scale": {"domain": [0,86717316]}
    },
    "y": {
        "field": "Large Bags",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "scale": {"domain": [0, 23769227]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "XLarge Bags",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [200, 2000, 20000, 2000000, 20000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "domain": [
              "GreatLakes", "LosAngeles","Plains","NewYork",
              "Denver","Houston","DallasFtWorth","PhoenixTucson",
              "SanFrancisco","California"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628",
              "#00f", "#ff0", "#f0f", "#0ff"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
        {"field": "region", "type": "nominal"},
        {"field": "Small Bags", "type": "quantitative", "format": ","},
        {"field": "Large Bags", "type": "quantitative", "format": ","},
        {"field": "XLarge Bags", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}